        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Station1 -->
        <activity android:name=".Station1" />
        <!-- Station2 -->
        <activity android:name=".Station2" />
        <!-- Station3 -->
        <activity android:name=".Station3" />
        <activity android:name=".SingleViewActivity" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAmIbZDVmXzoFgezVLDvr7no7kPtKi6T5g" />

        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

        </activity>
        <activity
            android:name=".PhotoUploader.PhotoDetailActivity">
        </activity>
    </application>

</manifest>
