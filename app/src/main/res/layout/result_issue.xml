<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/windowBackground"
        card_view:cardElevation="10dp"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/idd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="@string/Id"
            android:textColor="#0c0c0c"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/issue_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="แสดงไอดี"
            android:paddingLeft="20dp"
            android:textColor="#0c0c0c"
            android:layout_alignTop="@+id/idd"
            android:layout_alignRight="@+id/issue_name"
            android:layout_alignEnd="@+id/issue_name" />

        <TextView
            android:id="@+id/namee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_id"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="@string/name"
            android:textColor="#0c0c0c"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/issue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="แสดงชื่อ"
            android:paddingLeft="20dp"
            android:textColor="#0c0c0c"
            android:layout_alignTop="@+id/namee"
            android:layout_toRightOf="@+id/idd"
            android:layout_toEndOf="@+id/idd" />
        <TextView
            android:id="@+id/descriptionn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_name"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="@string/Des"
            android:textColor="#0c0c0c"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/issue_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="แสดงอธิบาย"
            android:paddingLeft="20dp"
            android:textColor="#0c0c0c"
            android:layout_alignTop="@+id/descriptionn"
            android:layout_toRightOf="@+id/descriptionn"
            android:layout_toEndOf="@+id/descriptionn" />
        <TextView
            android:id="@+id/userr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_description"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="ชื่อผู้รับผิดชอบ:"
            android:textColor="#0c0c0c"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/issue_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="แสดงUserID"
            android:paddingLeft="20dp"
            android:textColor="#0c0c0c"
            android:layout_alignTop="@+id/userr"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
